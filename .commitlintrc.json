{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "init"
      ]
    ],
    "type-empty": [
      2,
      "never"
    ],
    "scope-empty": [
      2,
      "never"
    ],
    "scope-case": [
      2,
      "always",
      "kebab-case"
    ],
    "subject-empty": [
      2,
      "never"
    ],
    "subject-full-stop": [
      2,
      "never"
    ],
    "header-max-length": [
      2,
      "always",
      100
    ],
    "body-leading-blank": [
      1,
      "always"
    ],
    "footer-leading-blank": [
      1,
      "always"
    ]
  },
  "helpUrl": "https://www.conventionalcommits.org/en/v1.0.0/"
}